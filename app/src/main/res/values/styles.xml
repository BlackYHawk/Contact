<resources>

    <style name="Widget.Contact.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">24dp</item>
    </style>

    <style name="TextAppearance.Contact.Tab" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_text</item>
    </style>

    <style name="Widget.Philm.Contact.List.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Philm.Contact.List.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="Widget.Philm.Contact.List.SectionHeader" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/spacing_major</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
